---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import Content from '../components/Content.astro';
import AnimatedPortal from '../components/AnimatedPortal.astro';
---

<Layout title="Music tools">
  <AnimatedPortal
    starsColor="red"
    starsColorTwo="orange"
    starsColorThree="orange"
    overflow="visible"
    paused={false}
    showPauseBtn={false}
    starsTimeOne="60s"
    starsTimeTwo="128s"
    starsColorThree="230s"
    fromPosition="translateY(300px)"
    toPosition="translate3d(1500px, -2000px, 0)"
  >
    <AnimatedPortal
      starsColor="white"
      starsColorTwo="white"
      starsColorThree="white"
      overflow="visible"
      paused={false}
    >
      <Banner title="Lorem Ipsum" subtitle="Guadalajara Jal" />
    </AnimatedPortal>
  </AnimatedPortal>
  <Content
    title="Content title"
    imageUrl="https://images.unsplash.com/photo-1668869049990-73ee0fc81f29?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2532&q=80"
  />
</Layout>
