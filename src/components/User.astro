---
const {user} = Astro.props;
---
<div class="card">
    <div class="field name-field">
        {user.name}
    </div>
    <div class="field">
        {user.username}
    </div>
    <div class="field">
        {user.email}
    </div>
    <div class="field">
        {user.phone}
    </div>
    <div class="field">
        {user.address.street}, {user.address.suite}
    </div>
    <div class="field">
        <a href={user.website} target="_blank">{user.website}</a>
    </div>
</div>
<style>
    .name-field{
        padding-bottom: 0.5rem;
    }
</style>